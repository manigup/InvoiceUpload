<Dialog
    id="_IDGenDialog1"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    draggable="true"
    contentWidth="300px"
    escapeHandler=".onDialogEscapeHandler"
    titleAlignment="Center"
    title="{= ${DecisionModel>/Action} === 'A' ? 'Approval' : 'Rejection'}"
>
    <content>
        <f:SimpleForm
            id="_IDGenSimpleForm1"
            editable="true"
            layout="ResponsiveGridLayout"
        >
            <Label
                id="_IDGenLabel1"
                required="true"
                design="Bold"
                text="Select Finance"
            />
            <Input
                id="finance"
                valueHelpOnly="true"
                showValueHelp="true"
                valueHelpRequest="onF4Help($event,'FIN')"
                visible="{= ${DecisionModel>/Action} === 'A'}"
                value="{DecisionModel>/FinanceApprover}"
            />
            <Label
                id="_IDGenLabel2"
                required="true"
                design="Bold"
                text="Enter Remarks"
            />
            <TextArea
                growing="true"
                id="remarks"
                value="{DecisionModel>/HodRemarks}"
            />
        </f:SimpleForm>
    </content>
    <beginButton>
        <Button
            id="_IDGenButton1"
            type="Emphasized"
            text="Submit"
            press="onHodSubmit"
        />
    </beginButton>
    <endButton>
        <Button
            id="_IDGenButton2"
            type="Reject"
            text="Cancel"
            press="onDialogCancel"
        />
    </endButton>
</Dialog>
