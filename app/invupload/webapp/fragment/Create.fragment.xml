<Dialog
    id="_IDGenDialog1"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.m.upload"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    draggable="true"
    contentWidth="350px"
    contentHeight="350px"
    afterClose="onDialogClose"
    title="Upload New Invoice"
    titleAlignment="Center"
>
    <content>
        <f:SimpleForm
            id="_IDGenSimpleForm1"
            editable="true"
            layout="ResponsiveGridLayout"
        >
            <Label
                id="_IDGenLabel1"
                required="true"
                design="Bold"
                text="Invoice Date"
            />
            <DatePicker
                id="invDate"
                valueFormat="yyyyMMdd"
                value="{DataModel>/InvoiceDate}"
            />
            <Label
                id="_IDGenLabel2"
                required="true"
                design="Bold"
                text="Invoice Number"
            />
            <Input
                id="invNo"
                value="{DataModel>/InvoiceNumber}"
            />
            <Label
                id="_IDGenLabel3"
                required="true"
                design="Bold"
                text="Invoice Amount"
            />
            <Input
                id="invAmmount"
                type="Number"
                value="{DataModel>/InvoiceAmount}"
            />
            <Label
                id="_IDGenLabel4"
                required="true"
                design="Bold"
                text="GST"
            />
            <Input
                id="gst"
                type="Number"
                value="{DataModel>/GST}"
            />
            <Label
                id="_IDGenLabel5"
                required="true"
                design="Bold"
                text="Cost Center"
            />
            <Input
                id="costCenter"
                value="{DataModel>/CostCenter}"
            />
            <Label
                id="_IDGenLabel6"
                required="true"
                design="Bold"
                text="Upload Reason without PO"
            />
            <TextArea
                growing="true"
                id="reason"
                value="{DataModel>/Reason}"
            />
            <Label
                id="_IDGenLabel8"
                required="true"
                design="Bold"
                text="Select HOD"
            />
            <Input
                id="hod"
                valueHelpOnly="true"
                showValueHelp="true"
                valueHelpRequest="onF4Help($event,'HOD')"
                value="{DataModel>/HodApprover}"
            />
            <Label
                id="_IDGenLabel7"
                required="true"
                design="Bold"
                text="Attachment"
            />
            <u:UploadSet
                id="attachment"
                mode="None"
                showIcons="false"
                fileTypes="pdf,xlsx,doc,png,jpeg"
                multiple="true"
                instantUpload="false"
                maxFileSize="10"
                uploadCompleted="onUploadComplete"
                beforeUploadStarts="onBeforeUploadStarts"
                uploadButtonInvisible="false"
                afterItemAdded="onAttachItemAdd"
            />
        </f:SimpleForm>
    </content>
    <beginButton>
        <Button
            id="_IDGenButton1"
            type="Emphasized"
            text="Submit"
            press="onCreatePress"
        />
    </beginButton>
    <endButton>
        <Button
            id="_IDGenButton2"
            type="Reject"
            text="Cancel"
            press="onDialogCancel"
        />
    </endButton>
</Dialog>
